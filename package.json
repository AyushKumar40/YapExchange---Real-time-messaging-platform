{
  "name": "real-time-chatroom",
  "version": "1.0.0",
  "description": "Real-time chatroom with authentication, private rooms, and direct messages",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && cross-env npm start",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd client &&npm install"
  },
  "keywords": [
    "chat",
    "socket.io",
    "react",
    "mongodb",
    "real-time"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "socket.io": "^4.7.4"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2"
  }
}
